{{- define "RenderInputValidation"}}
    {{- $belongs := index . 0}}
    {{- $operation := index . 1}}
    {{- $request := $operation.Request}}
    {{- $customizedTypes := index . 2}}
    {{$opID := replace $operation.ID "Bucket" "" -1}}

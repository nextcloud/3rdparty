                {{- if eq $belongs "QingStor" }}
                'Host' => $this->config->host,
                {{- end}}
                {{- range $id, $property := $operation.Request.Headers.Properties}}
                '{{$property.Name}}' => isset($options['{{$property.ID}}'])?$options['{{$property.ID}}']:null,
                {{- end}}
            ),
